<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{YYYY.MM.dd HH:mm:ss.SSS} %p %t %c{2} %m%n</Pattern>
		</layout>
	</appender>

	<appender name="dailyRolling" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>C:\hycho\log\HarpyLog.%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<Pattern>%d{YYYY.MM.dd HH:mm:ss.SSS} %p %t %c{2} %m%n</Pattern>
		</encoder>
	</appender>

	<root level="error">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="com.harpy" level="error">
		<appender-ref ref="dailyRolling" />
	</logger>
	
	<logger name="java.sql" level="error" additivity="false">
  		<appender-ref ref="STDOUT" />
    </logger>

    <logger name="java.sql.connection" level="error" additivity="false">
	    <appender-ref ref="STDOUT" />
    </logger>
	

</configuration>